pipeline {
    agent any



    stages {
        

        stage('Build Docker Images') {
            steps {
                script {
                    bat "docker build -t gauravjhagk/frontend:latest ./frontend"
                    bat "docker build -t gauravjhagk/backend:latest ./backend"
                }
            }
        }

        
        
    }

    post {
        success {
            echo 'Build and Push Successful!'
        }
        failure {
            echo 'Build or Push Failed.'
        }
    }
}
